{
    "keyboard_name": "BDN9 Rev. 2",
    "usb": {
        "pid": "0x2133",
        "device_version": "2.0.0"
    },
    "rgblight": {
        "saturation_steps": 8,
        "brightness_steps": 8,
        "led_count": 11,
        "sleep": true
    },
    "ws2812": {
        "pin": "B15"
    },
    "rgb_matrix": {
        "driver": "WS2812"
    },
    "encoder": {
        "rotary": [
            {"pin_a": "A8", "pin_b": "A4"},
            {"pin_a": "B3", "pin_b": "A15"},
            {"pin_a": "A10", "pin_b": "A9"}
        ]
    },
    "qmk": {
        "tap_keycode_delay": 10
    },
    "processor": "STM32F072",
    "bootloader": "stm32-dfu",
    "matrix_pins": {
        "direct": [
            ["B12", "B5", "B6"],
            ["B14", "B4", "B7"],
            ["A3", "F1", "F0"]
        ]
    }
}
